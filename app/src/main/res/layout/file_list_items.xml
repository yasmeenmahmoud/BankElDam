<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postslayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp"
    android:background="#ffffff"
    android:onClick="descreption"
    android:orientation="vertical"
    tools:ignore="OnClick">

    <com.github.ivbaranov.mfb.MaterialFavoriteButton
        android:id="@+id/btn_favourite"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:mfb_animate_favorite="true"
        app:mfb_animate_unfavorite="false"
        app:mfb_color="black"
        app:mfb_favorite_image="@drawable/loveit"
        app:mfb_not_favorite_image="@drawable/favoriteicon"
        app:mfb_rotation_angle="360"
        app:mfb_size="48"
        app:mfb_type="heart" />

    <TextView
        android:id="@+id/txt_savechildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:text="savechildren"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_kids"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/txt_savechildren"
        android:padding="10dp"
        android:src="@drawable/kids" />
</RelativeLayout>
